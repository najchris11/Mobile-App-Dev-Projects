<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZipcodesFromWeb.MainPage">

    <StackLayout>
        <Entry x:Name="Cityinfo" Placeholder="Enter city name here."/>
        <Entry x:Name="Stateinfo" Placeholder="Enter abbreviated region name."/>
        <Entry x:Name="Countryinfo" Placeholder="Enter abbreviated country name."/>
        <Button Text="Submit" Clicked="Button_Clicked"/>
        <Label x:Name="requestStatus"/>
        <ListView x:Name="ReturnedDataList"/>
    </StackLayout>

</ContentPage>
